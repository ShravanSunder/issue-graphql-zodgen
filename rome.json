{
  "linter": {
    "ignore": [
      "**/node_modules/**",
      "**/*.{js,jsx}",
      "**/.next/**/*",
      "**/dist/**/*",
      "**/build/**/*",
      "**/generated/**/*",
      "generated/**/*"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": true
      },
      "style": {
        "useSelfClosingElements": "off"
      }
    }
  },
  "formatter": {
    "ignore": [
      "**/node_modules/**",
      "**/*.{js,jsx}",
      "**/.next/**/*",
      "**/dist/**/*",
      "**/build/**/*",
      "**/generated/**/*"
    ],
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120,
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "single"
    }
  }
}
